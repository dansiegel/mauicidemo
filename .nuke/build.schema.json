{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Build Schema",
  "$ref": "#/definitions/build",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "Android_Keystore_B64": {
          "type": "string",
          "description": "Android KeyStore must be Base64 Encoded",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "Android_Keystore_Name": {
          "type": "string",
          "description": "Android KeyStore name must be provided",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "Android_Keystore_Password": {
          "type": "string",
          "description": "Android KeyStore must be provided",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "Apple_AuthKey_P8": {
          "type": "string",
          "description": "Apple AuthKey P8 text value",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "Apple_IssuerId": {
          "type": "string",
          "description": "Apple Issuer Id is required",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "Apple_KeyId": {
          "type": "string",
          "description": "Apple Key Id is required",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "Apple_ProfileId": {
          "type": "string",
          "description": "Apple Profile Id is required",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitbucket",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "IgnoreFailedSources": {
          "type": "boolean",
          "description": "Ignore unreachable sources during Restore"
        },
        "IOS_P12_B64": {
          "type": "string",
          "description": "iOS P12 Certificate must be Base64 Encoded",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "IOS_P12_Password": {
          "type": "string",
          "description": "iOS P12 Certificate must be provided",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "CompileAndroid",
              "CompileIos",
              "DownloadProvisioningProfile",
              "InstallWorkload",
              "Restore",
              "RestoreIOSCertificate",
              "RestoreKeystore"
            ]
          }
        },
        "Solution": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "CompileAndroid",
              "CompileIos",
              "DownloadProvisioningProfile",
              "InstallWorkload",
              "Restore",
              "RestoreIOSCertificate",
              "RestoreKeystore"
            ]
          }
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}